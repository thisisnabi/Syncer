@page
@model Syncer.WebApp.Pages.JoinerModel
@{
    ViewData["Title"] = "Joiner page";
}



<div class="container">
    <div class="rooms-logo">
        <img src="~/join.png" alt="Rooms Logo">
    </div>

    <h1>Join your Room meeting</h1>

    <div class="input-group">
        <label for="username">Username</label>
        <input type="text" id="username" autocomplete="off" name="username" placeholder="Enter your username">
    </div>
    <div class="input-group">
        <label for="presentation">Presentation</label>
        <input type="text" id="presentation" autocomplete="off" name="presentation" placeholder="Presentation">
    </div>

    <button class="join-button" onclick="joinToPresentation()">Join on the Rooms app</button>

    <p>Do you want to be a real member? <a href="#">Let's go</a></p>
</div>

@section Scripts
{
    <script>
        function joinToPresentation() {
            const usernameInput = document.getElementById('username');
            const presentationInput = document.getElementById('presentation');

            usernameInput.classList.remove('error');
            var url = 'https://localhost:7209/Presentation/' + presentationInput + "/join";
            $.ajax({
                url: url,
                data: {
                    joinerId: usernameInput
                },
                type: 'Post',
                success: function (response) {
                    console.log("user is valid");
                },
                error: function () {
                    console.error("failed connection to the identity server!");
                    alert('Please fill out all fields.');
                }
            });
        }
    </script>

}

