        }

        .rooms-logo {
            margin-bottom: 20px;
        }

            .rooms-logo img {
                max-width: 100px;
                height: auto;
            }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #444;
        }

        p {
            margin-top: 10px;
            margin-bottom: -0.5rem !important;
            color: #444;
        }

        a {
            color: #0078d4;
